<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15sp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        app:cardCornerRadius="15sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile"
                android:src="@drawable/user"
                android:layout_marginTop="50dp"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/moname"
                android:layout_marginTop="10dp"
                android:text="Mohammed M Elkady"
                android:textSize="17sp"
                android:fontFamily="@font/bariol_regular"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/moemail"
                android:layout_marginTop="10dp"
                android:text="elkadymohammed01@gmail.com"
                android:textSize="15sp"
                android:fontFamily="@font/bariol_regular"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="35dp"
                android:layout_marginBottom="35dp"
                android:layout_marginEnd="35dp"
                android:layout_marginStart="35dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="start"
                    android:layout_marginBottom="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/name"
                        android:layout_margin="25sp"
                        android:drawableStart="@drawable/ic_person_pin_black_24dp"
                        android:text="Mohammed M Elkady"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/phone"
                        android:layout_margin="25sp"
                        android:drawableStart="@drawable/ic_local_phone_black_24dp"
                        android:text="01002365602"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/email"
                        android:layout_margin="25sp"
                        android:drawableStart="@drawable/ic_email_black_24dp"
                        android:text="elkadymohammed01@gmail.com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cancel"
                    android:background="@drawable/shape8"
                    android:text="Cancel"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="#ffff"
                    android:layout_width="100dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:id="@+id/log_out"
                    android:background="@drawable/shape7"
                    android:text="Log Out"
                    android:gravity="center"
                    android:textColor="#ffff"
                    android:layout_width="120dp"
                    android:layout_height="60dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>